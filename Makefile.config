ifndef MAKECONFIG
MAKECONFIG = 1

PROJNAME = barelibc

ifeq "$(BINDIR)" ""
BINDIR = ../../bin
endif

ifeq "$(INCDIR)" ""
INCDIR = ../../include
endif

#.SILENT:
.SUFFIXES:
.SECONDARY:
.DEFAULT_GOAL = all
.SECONDEXPANSION:

AS = yasm
ASFLAGS = -f elf64
CC = $(CCOMPILER)
ifeq "$(CC)" ""
CC = gcc
endif
CFLAGS = -m64 -nostdlib -nostdinc -nostartfiles -nodefaultlibs -O3 -fno-zero-initialized-in-bss -ffast-math -mno-red-zone -ffreestanding -fpack-struct -undef -std=c99 -pedantic -Wall -Werror -I$(INCDIR) -D__BAREMETAL__
ifeq "$(CC)" "clang"
CFLAGS += -D__CLANG__
endif
LD = ld
LDFLAGS = -T $(BINDIR)/app.ld
AR = ar
ARFLAGS = cr

LIB = $(BINDIR)/lib$(PROJNAME).a

%.o: %.asm
	$(AS) $(ASFLAGS) $< -o $@

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

endif #MAKECONFIG


###
